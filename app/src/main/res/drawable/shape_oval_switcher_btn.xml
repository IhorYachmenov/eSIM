<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="@dimen/size_width_switcher_btn" android:height="@dimen/size_height_switcher_btn" />
            <stroke android:width="@dimen/size_width_stroke_switcher_btn" android:color="@color/background_switcher_blue" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="@dimen/size_width_switcher_btn" android:height="@dimen/size_height_switcher_btn" />
            <stroke android:width="@dimen/size_width_stroke_switcher_btn" android:color="@color/background_switcher_blue" />
        </shape>
    </item>

</selector>